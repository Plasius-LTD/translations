{
  "name": "@plasius/translations",
  "version": "1.0.9",
  "type": "module",
  "description": "i18n compatible translation manager",
  "keywords": [
    "i18n",
    "internationalization",
    "localization",
    "l10n",
    "translation",
    "translations",
    "language",
    "languages",
    "locale",
    "multilingual",
    "polyglot",
    "message-catalog",
    "translation-manager",
    "translation-workflow",
    "string-management",
    "i18n-tools",
    "react-i18n",
    "typescript-i18n"
  ],
  "homepage": "https://github.com/Plasius-LTD/translations#readme",
  "bugs": {
    "url": "https://github.com/Plasius-LTD/translations/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Plasius-LTD/translations.git"
  },
  "license": "Apache-2.0",
  "author": "Plasius LTD",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "prepare": "npm run build",
    "clean": "rimraf dist",
    "test:coverage": "vitest run --coverage",
    "pack:check": "node scripts/verify-public-package.cjs",
    "prepublishOnly": "npm run build && npm run pack:check"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.13",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "jsdom": "^27.0.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://patreon.com/PlasiusLTD"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/Plasius-LTD"
    }
  ],
  "overrides": {
    "minimatch": "^10.2.1"
  }
}
